{
    "name": "Content Script Example",
    "version": "0.1",

    "description": "Inject a content script, reload the page into an iframe.",
    "icons": { 
        "16" : "images/icon.png",
        "48" : "images/48.png",
        "128" : "images/128.png"
    },

    "homepage_url": "http://iwearshorts.com/",
    
    "browser_action": {
        "default_icon": "images/icon.png", 
        "default_title": "Content Script Injector"
    },
    
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["css/style.css"],
            "js": ["js/jquery.js", "js/app.js"]
        }
    ]
}